      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Tạo username/email duy nhất theo timestamp",
                  "const timestamp = Date.now();",
                  "pm.environment.set('username', `testuser${timestamp}`);",
                  "pm.environment.set('fullname', `Test User`);",
                  "pm.environment.set('email', `test${timestamp}@example.com`);",
                  "pm.environment.set('password', '123456');"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Register successful', function() {",
                  "    const res = pm.response.json();",
                  "    pm.expect(res.success).to.be.true;",
                  "    pm.expect(res.data).to.have.property('user');",
                  "    pm.expect(res.data.user).to.have.property('id');",
                  "});",
                  "const res = pm.response.json();",
                  "pm.environment.set('userId', res.data.user.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"fullname\": \"{{fullname}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api","auth","register"]
            }
          }
        },
